<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <RelativeLayout
                android:layout_marginTop="30dp"
                android:id="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="56dp" >

                <Button
                    android:id="@+id/input_number_button"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="320dp"
                    android:text="Done" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="210dp"
                    android:layout_height="39dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="11dp"
                    android:layout_marginBottom="6dp"
                    android:text="Specify Number of Data Inputs you want to see :"
                    android:textAlignment="center" />

                <EditText
                    android:id="@+id/input_number"
                    android:layout_width="105dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="213dp"
                    android:ems="10"
                    android:maxEms="3"
                    android:inputType="number" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_marginTop="30dp"
                android:id="@+id/relativeLayout2"
                android:layout_width="match_parent"
                android:layout_height="65dp">


                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="210dp"
                    android:layout_height="39dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="11dp"
                    android:layout_marginBottom="6dp"
                    android:text="Specify type of graph you want to see"
                    android:textAlignment="center" />

                <Spinner
                    android:id="@+id/graph_spinner"
                    android:layout_width="200dp"
                    android:layout_height="44dp"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginEnd="1dp"
                    android:layout_marginBottom="10dp" />


            </RelativeLayout>


            <RelativeLayout
                android:layout_marginTop="30dp"
                android:id="@+id/relativeLayout1"
                android:layout_width="match_parent"
                android:layout_height="56dp">

                <Button
                    android:id="@+id/input_air_number_button"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="320dp"
                    android:text="Done" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="210dp"
                    android:layout_height="39dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="11dp"
                    android:layout_marginBottom="6dp"
                    android:text="Specify threshold for Air-Quality Alerts"
                    android:textAlignment="center" />

                <EditText
                    android:id="@+id/input_air_number"
                    android:layout_width="105dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="213dp"
                    android:inputType="numberDecimal"
                    android:maxEms="6" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/relativeLayout3"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="30dp">

                <Button
                    android:id="@+id/input_ph_number_button"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="320dp"
                    android:text="Done" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="210dp"
                    android:layout_height="39dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="11dp"
                    android:layout_marginBottom="6dp"
                    android:text="Specify threshold for Soil pH Alerts"
                    android:textAlignment="center" />

                <EditText
                    android:id="@+id/input_ph_number"
                    android:layout_width="105dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="213dp"
                    android:inputType="numberDecimal"
                    android:maxEms="6" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout4"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="30dp">

                <Button
                    android:id="@+id/input_moisture_number_button"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="320dp"
                    android:text="Done" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="210dp"
                    android:layout_height="39dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="11dp"
                    android:layout_marginBottom="6dp"
                    android:text="Specify threshold for Soil Moisture Alerts"
                    android:textAlignment="center" />

                <EditText
                    android:id="@+id/input_moisture_number"
                    android:layout_width="105dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="213dp"
                    android:inputType="numberDecimal"
                    android:maxEms="6" />
            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/relativeLayout5"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="30dp">

                <Button
                    android:id="@+id/input_temperature_number_button"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="320dp"
                    android:text="Done" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="210dp"
                    android:layout_height="39dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="11dp"
                    android:layout_marginBottom="6dp"
                    android:text="Specify threshold for Temperature Alerts"
                    android:textAlignment="center" />

                <EditText
                    android:id="@+id/input_temperature_number"
                    android:layout_width="105dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="213dp"
                    android:inputType="numberDecimal"
                    android:maxEms="6" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/relativeLayout6"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="30dp">

                <Button
                    android:id="@+id/input_humidity_number_button"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="320dp"
                    android:text="Done" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="210dp"
                    android:layout_height="39dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="11dp"
                    android:layout_marginBottom="6dp"
                    android:text="Specify threshold for Humidity Alerts"
                    android:textAlignment="center" />

                <EditText
                    android:id="@+id/input_humidity_number"
                    android:layout_width="105dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="213dp"
                    android:inputType="numberDecimal"
                    android:maxEms="6" />
            </RelativeLayout>




        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>